{
    "compileOnSave": false,
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "target": "ES5",
        "sourceMap": true,
        "declaration": true,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "types": [
            "jasmine"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "tmp",
        "dist"
    ]
}